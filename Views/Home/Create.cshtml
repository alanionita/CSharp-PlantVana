@model Plantvana.Models
@using Restaurant;

<h1>Add a new restaurant</h1>
<form method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name"/> 
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Cuisine"></label>
        <select asp-for="Cuisine" 
                asp-items="@Html.GetEnumSelectList<CuisineType>()">
        </select>
        <span asp-validation-for="Cuisine"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description"/> 
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label asp-for="Postcode"></label>
        <input asp-for="Postcode"/> 
        <span asp-validation-for="Postcode"></span>
    </div>
    
    <input type="submit" name="save" value="Save"/>
</form>