@model Plantvana.Models.Restaurant;

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Plantvana - where you'll find your next vegan bodega'</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.2/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.0.0/js/all.js"></script>    
    <style>
       #map {
            
        height: 100%;
        width: 100%;
       }
    </style>
</head>
<body>
    <section class="container is-widescreen">
        <div class="card columns">
            <div class="column card-content">
                <div class="card-image">
                    <figure class="image is-3by2">
                        <img src="@Model.Thumbnail" alt="Placeholder image"/>
                    </figure>
                </div>    
                <div class="card-title" >
                    <h1 class="title is-size-1">@Model.Name</h1>
                </div>    
                <p class="subtittle is-size-3">@Model.Description</p>
                <a class="button is-danger" asp-action="Index" asp-controller="Home">Back to list</a>     
            </div>
            <div class="column">
                <div id="map"></div>    
            </div>            
            <script type="text/javascript">
                function initMap() {
                    var location = {lat: 53.48887, lng: -2.238030};
                    var map = new google.maps.Map(document.getElementById('map'), {
                        zoom: 11,
                        center: location
                    });
                 var marker = new google.maps.Marker({
                    position: location,
                    map: map
                  });
                }
            </script>
            <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCazmXwBDQFRVpieKlsaVtDMwArV9yUGu4&callback=initMap">
            </script>
        </div>        
    </section>
</body>
